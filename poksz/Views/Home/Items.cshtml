@{
    ViewData["Title"] = "Товары";
}

<div class="container">

    <div class="card-deck">
        @foreach (ItemClass i in ViewBag.items)
        {

            <div class="card">
                <img src=@i.Picture class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@i.Description</h5>
                    <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text"><small class="text-muted">@i.Price рублей</small></p>
                </div>
            </div>
        }
    </div>
</div>




